{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":approveMajorUpdates",
    ":label(dependencies)",
    ":semanticCommitType(chore)",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard",
    "schedule:daily",
    ":automergePatch",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":prConcurrentLimitNone",
    ":separatePatchReleases",
    "replacements:all",
    "workarounds:all"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "commitMessagePrefix": "chore(all): ",
  "commitMessageAction": "update",
  "commitBody": "Signed-off-by: Renovate Bot <bot@renovateapp.com>",
  "platformAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "groupName": "all",
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "description": "Automerge major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "docker",
        "golang-version"
      ],
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "internal",
        "devDependencies",
        "ref",
        "none",
        "security",
        "grop",
        "unpin"
      ],
      "matchDatasources": [
        "docker",
        "golang-version",
        "go"
      ],
      "matchPackageNames": [
        "go",
        "golang",
        "ubuntu",
        "alpine",
        "gcr.io/distroless/static"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Enforce bump range strategy",
      "matchDatasources": [
        "docker",
        "golang-version"
      ],
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "rangeStrategy": "bump"
    },
    {
      "description": "Automerge github-actions updates",
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
