{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommitType(chore)",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard",
    ":separatePatchReleases",
    "replacements:all",
    "workarounds:all"
  ],
  "postUpdateOptions": ["gomodTidy"],
  "commitMessagePrefix": "chore(all): ",
  "commitMessageAction": "update",
  "commitBody": "Signed-off-by: Renovate Bot <bot@renovateapp.com>",
  "labels": ["dependencies"],
  "prConcurrentLimit": 50,
  "prHourlyLimit": 0,
  "platformAutomerge": true,
  "automerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "description": "Automerge all updates when checks pass",
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Block echo v5 until echo-swagger supports it",
      "matchPackageNames": ["github.com/labstack/echo/v5"],
      "enabled": false
    }
  ]
}
